@page "/NuevaFactura"
<h3>Nueva Factura</h3>
<br />

<EditForm Model="@factura">
    <DataAnnotationsValidator />

    <div class="form-group row">
        <label for="IdFactura" class="col-sm-2 col-form-label">
            IdFactura
        </label>
        <div class="col-sm-10">
            <InputNumber id="IdFactura" class="form-control" placeholder="IdFactura" @bind-Value="factura.IdFactura" />
            <ValidationMessage For="@(() => factura.IdFactura)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="IdentidadCliente" class="col-sm-2 col-form-label">
            Identidad Cliente
        </label>
        <div class="col-sm-10">
            <InputText id="IdentidadCliente" class="form-control" placeholder="IdentidadCliente" @bind-Value="factura.IdentidadCliente" />
            <ValidationMessage For="@(() => factura.IdentidadCliente)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="NombreCliente" class="col-sm-2 col-form-label">
            Nombre Cliente
        </label>
        <div class="col-sm-10">
            <InputText id="NombreCliente" class="form-control" placeholder="NombreCliente" @bind-Value="factura.NombreCliente" />
        </div>
    </div>

    <div class="form-group row">
        <label for="Fecha" class="col-sm-2 col-form-label">
            Fecha
        </label>
        <div class="col-sm-10">
            <InputDate id="Fecha" class="form-control" placeholder="Fecha" @bind-Value="factura.Fecha"  />
        </div>
    </div>

    <div class="form-group row">
        <label for="CodigoAutomovil" class="col-sm-2 col-form-label">
            Codigo Automovil
        </label>
        <div class="col-sm-10">
            <InputText id="CodigoAutomovil" class="form-control" placeholder="CodigoAutomovil" @bind-Value="factura.CodigoAutomovil" />
            <ValidationMessage For="@(() => factura.CodigoAutomovil)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="Cantidad" class="col-sm-2 col-form-label">
            Cantidad
        </label>
        <div class="col-sm-10">
            <InputNumber id="Cantidad" class="form-control" placeholder="Cantidad" @bind-Value="factura.Cantidad"  />
        </div>
    </div>

    factura.SubTotal = (factura.Cantidad * automovil.Precio);
    <div class="form-group row">
        <label for="SubTotal" class="col-sm-2 col-form-label">
            SubTotal
        </label>
        <InputNumber id="SubTotal" class="form-control" placeholder="SubTotal" @bind-Value="factura.SubTotal"  />
    </div>

    <div class="form-group row">
        <label for="Impuesto" class="col-sm-2 col-form-label">
            Impuesto
        </label>
        <div class="col-sm-10">
            <InputNumber id="Impuesto" class="form-control" placeholder="Impuesto" @bind-Value="factura.Impuesto"  />
        </div>
    </div>

    <div class="form-group row">
        <label for="Total" class="col-sm-2 col-form-label">
            Total
        </label>
        <div class="col-sm-10">
            <InputNumber id="Total" class="form-control" placeholder="Total" @bind-Value="factura.Total"  />
        </div>
    </div>

    <div class="form-group row">
        <p>
            <input type="submit" class="btn-toolbar btn-primary" value="Guardar" @onclick="Agregar" />
            <input type="submit" class="btn-toolbar btn-danger" value="Cancelar" @onclick="Cancelar" />
        </p>
    </div>

</EditForm>