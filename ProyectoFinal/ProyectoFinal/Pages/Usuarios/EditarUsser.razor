@page "/Usser/Editar/{Codigo}"

<EditForm Model = "@user">
    <DataAnnotationsValidator/>
        <h1 style = "color:blue;" >Auto-Ventas UNAH</h1>
        <h3>Editar Usuario</h3>
        <hr />

        <div class = "form-group row">
            <label for = "CodigoUsuario" class = "col-sm-2 col-form-label">
                CodigoUsuario
            </label>
            <div class = "col-sm-10">
                <InputText id = "CodigoUsuario" class = "form-control" placeholder = "CodigoUsuario" @bind-Value = "user.CodigoUsuario"/>
                <ValidationMessage For= "@(() => user.CodigoUsuario)" />
            </div>
        </div>


                <div class = "form-group row">
            <label for = "Nombre" class = "col-sm-2 col-form-label">
                Nombre
            </label>
            <div class = "col-sm-10">
                <InputText id = "Nombre" class = "form-control" placeholder = "Nombre" @bind-Value = "user.Nombre"/>
                <ValidationMessage For= "@(() => user.Nombre)" />
            </div>
        </div>


        <div class = "form-group row">
            <label for = "Clave" class = "col-sm-2 col-form-label">
                Clave
            </label>
            <div class = "col-sm-10">
                <InputText id = "Clave" class = "form-control" placeholder = "Clave" @bind-Value = "user.Clave" type = "password"/>
                <ValidationMessage For= "@(() => user.Clave)" />
            </div>
        </div>


        <div class = "form-group row">
            <label for = "Estado" class = "col-sm-2 col-form-label">
                Estado
            </label>
            <div class = "col-sm-10">
                <InputCheckbox  @bind-Value = "user.Estado"/>
            </div>
        </div>


        <div class = "form-group row">
            <label for = "TipoUsuario" class = "col-sm-2 col-form-label">
                TipoUsuario
            </label>
            <div class = "col-sm-10">
                <InputSelect class = "form-control"  @bind-Value = "user.TipoUsuario">
                    @foreach(var TipoUsuario in Enum.GetValues(typeof(Tipo)))
                    {
                        <option value = "@TipoUsuario">@TipoUsuario</option>
                    }
                </InputSelect>
                <ValidationMessage  For= "@(() => user.TipoUsuario)" />
            </div>
        </div>


<div class= "form-group row">   
    <p>
        <input type = "submit" class= "btn-toolbar btn-primary" value="Guardar" @onclick="Guardar" />
        <input type = "submit" class= "btn-toolbar btn-danger" value="Cancelar" @onclick="Cancelar" />
        <input type = "submit" class= "btn-toolbar btn-warning" value="Eliminar" @onclick="Eliminar" />
    </p>
</div>




</EditForm>>
